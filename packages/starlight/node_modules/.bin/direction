#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/workspaces/mermaid-theme/packages/starlight/node_modules/direction/node_modules:/workspaces/mermaid-theme/packages/starlight/node_modules:/workspaces/mermaid-theme/packages/node_modules:/workspaces/mermaid-theme/node_modules:/workspaces/node_modules:/node_modules:/workspaces/mermaid-theme/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/workspaces/mermaid-theme/packages/starlight/node_modules/direction/node_modules:/workspaces/mermaid-theme/packages/starlight/node_modules:/workspaces/mermaid-theme/packages/node_modules:/workspaces/mermaid-theme/node_modules:/workspaces/node_modules:/node_modules:/workspaces/mermaid-theme/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../direction/cli.js" "$@"
else
  exec node  "$basedir/../direction/cli.js" "$@"
fi
